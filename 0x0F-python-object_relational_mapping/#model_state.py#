#!/usr/bin/python3

"""
This module contains the class definition of a State and an

instance Base = declarative_base()
"""

from sqlalchemy import create_engine, Column, Integer, String
from sqlalchem
username = sys.argv[1]
password = sys.argv[2]
db_name = sys.argv[3]

# Corrected database URL
engine = create_engine(
    f'mysql://{username}:{password}@localhost:3306/{db_name}', echo=True)
Base = declarative_base()


class State(Base):
    """A class that defines a state."""

    __tablename__ = 'states'

    id = Column(Integer, primary_key=True, autoincrement=True, nullable=False)
    name = Column(String(128), nullable=False)

# This line creates the table in the MySQL database
Base.metadata.create_all(engine)
